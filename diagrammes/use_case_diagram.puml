@startuml
!theme plain
title Diagramme de Cas d'Utilisation - Système de Réservation

left to right direction

actor "Utilisateur" as User
actor "Prestataire" as Provider
actor "Administrateur" as Admin

rectangle "Système de Réservation" {
  ' Cas d'utilisation Utilisateur
  usecase "S'inscrire" as UC1
  usecase "Se connecter" as UC2
  usecase "Consulter services" as UC3
  usecase "Réserver rendez-vous" as UC4
  usecase "Réserver créneau" as UC5
  usecase "Payer en ligne" as UC6
  usecase "Gérer profil" as UC7
  usecase "Consulter événements" as UC8
  usecase "S'inscrire à événement" as UC9
  usecase "Annuler réservation" as UC10
  
  ' Cas d'utilisation Prestataire
  usecase "S'inscrire comme prestataire" as UC11
  usecase "Gérer planning" as UC12
  usecase "Configurer créneaux" as UC13
  usecase "Créer événements" as UC14
  usecase "Gérer codes promo" as UC15
  usecase "Consulter statistiques" as UC16
  usecase "Valider rendez-vous" as UC17
  
  ' Cas d'utilisation Admin
  usecase "Gérer prestataires" as UC18
  usecase "Valider inscriptions" as UC19
  usecase "Consulter tableau de bord" as UC20
  usecase "Gérer système" as UC21
}

' Relations Utilisateur
User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6
User --> UC7
User --> UC8
User --> UC9
User --> UC10

' Relations Prestataire
Provider --> UC2
Provider --> UC11
Provider --> UC12
Provider --> UC13
Provider --> UC14
Provider --> UC15
Provider --> UC16
Provider --> UC17

' Relations Admin
Admin --> UC2
Admin --> UC18
Admin --> UC19
Admin --> UC20
Admin --> UC21

' Extensions et inclusions
UC4 ..> UC6 : <<include>>
UC5 ..> UC6 : <<include>>
UC9 ..> UC6 : <<extend>>
UC11 ..> UC1 : <<extend>>

@enduml